<!DOCTYPE html>
<html>
    <head>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                fetch("https://dummyjson.com/quotes/random")
                    .then(response => response.json())  
                    .then(data => {
                        document.getElementById("quote").innerHTML = `
                            <p>"${data.quote}" - ${data.author}</p>
                        `;
                    })
                    .catch(error => {
                        console.error("Error fetching quote:", error);
                        document.getElementById("quote").innerHTML = "Sorry, there was an error fetching the quote.";
                    });
            });
        </script>

    </head>
    <body>
        <%- include("partials/navbar", {page: "/"}) %>

        <br />

            
            <div class="container">

                <div class="row">
                    <main class="col-md-12">
        
                        <section class="bg-light text-center py-5">
                            <div class="container">
                                <h1 class="display-5 fw-bold"> <%= set.name%></h1>
                                <p class="lead text-muted">Below, you will find detailed information about the set: <%= set.name%></p>
                                
                            </div>
                        </section>
        
                        <br />
                        
                            
                              <img class="img-fluid rounded w-100 mb-3" src="<%= set.img_url %>" alt="Set Image" />
        
                            
                 
                              <p>
                                <span class="fw-bold">Set Name: </span> <%= set.name%> <br />
                                <span class="fw-bold">Year Released: </span> <%= set.year%> <br />
                                <span class="fw-bold">Theme: </span> <%= set.Theme.name%> <br />
                                <span class="fw-bold">Number of Parts: </span> <%= set.num_parts%> <br /><br />
                                <span id="quote"></span>  <br /><br />
                                <a class="btn btn-danger btn-sm mb-2" href="/lego/deleteset/<%= set.set_num%>">
                                    DELETE SET: <%= set.set_num%>
                                  </a><br />
                                  <a class="btn btn-primary btn-sm" href="/lego/redirectToSets">
                                    RETURN
                                  </a>
                                </p>
                         
          
                      </main>
                  </div>
              </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>